<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".view.ui.browse.MenuFragment">

    <ImageView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        android:id="@+id/close_image_view"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close"
        app:tint="@color/white" />

    <TextView
        android:fontFamily="@font/main_regular"
        android:id="@+id/settings_text_view"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:paddingHorizontal="48dp"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:theme="@style/ClickableView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close_image_view"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:fontFamily="@font/main_regular"
        android:id="@+id/rate_text_view"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:paddingHorizontal="48dp"
        android:text="Rate app"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:theme="@style/ClickableView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_text_view"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:fontFamily="@font/main_regular"
        android:id="@+id/help_text_view"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:paddingHorizontal="48dp"
        android:text="Help"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:theme="@style/ClickableView"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rate_text_view"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:fontFamily="@font/main_regular"
        android:id="@+id/about_text_view"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:paddingHorizontal="48dp"
        android:text="About"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:theme="@style/ClickableView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_text_view"
        app:layout_constraintVertical_bias="0.08" />


    <TextView
        android:fontFamily="@font/main_regular"
        android:id="@+id/tv_version"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="48dp"
        android:textAllCaps="true"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_text_view"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Version\n1.10.00" />

</androidx.constraintlayout.widget.ConstraintLayout>